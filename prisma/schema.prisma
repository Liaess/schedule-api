// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  Session Session[]
  @@map("users")
}

model Session {
  id     Int    @id @default(autoincrement())
  userId Int
  token  String
  User   User   @relation(fields: [userId], references: [id])

  @@map("sessions")
}
